<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.RestaurantDescriptionAdmin"
    android:orientation="vertical"

    >
    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/Admin_PlaceLogo"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_height="@dimen/_100sdp"
            android:layout_weight="2"
            android:background="@drawable/ic_launcher_background" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="لوجو المحل:"
            android:textDirection="rtl"

            android:layout_gravity="center"
            android:textSize="19sp"/>
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <EditText
            android:id="@+id/Admin_PlaceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="اسم المحل:"
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            android:layout_gravity="center"
            android:textSize="19sp"/>



    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/_5sdp"

        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <EditText
            android:id="@+id/Admin_PlaceDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="وصف المحل:"
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            android:layout_gravity="center"
            android:textSize="19sp"/>
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <EditText
            android:id="@+id/Admin_PlaceLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="عنوان المحل:"
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            android:layout_gravity="center"
            android:textSize="19sp"/>

    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <EditText
            android:id="@+id/Admin_PlaceNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="رقم تلفون المحل:"
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            android:layout_gravity="center"
            android:textSize="19sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/image_menu1"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@mipmap/ic_launcher_round">
        </ImageView>

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/image_menu2"
            android:layout_marginStart="@dimen/_20sdp"
            android:background="@mipmap/ic_launcher_round">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="قائمة الطعام: "
            android:textDirection="rtl"
            android:textSize="19sp"
            android:layout_gravity="center">
        </TextView>

    </LinearLayout>
    <Button
        android:id="@+id/send"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg"
        android:text="نشر"
        android:textSize="19sp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_margin="@dimen/_20sdp"
        android:textStyle="bold|italic"
 />




</LinearLayout>